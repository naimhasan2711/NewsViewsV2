        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/navigation_drawyer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nakibulhasan111@gmail.com"
        android:textColor="#111111"/>

